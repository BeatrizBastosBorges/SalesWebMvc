
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>
<div class="form-row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-lg-2 col-form-label col-form-label-sm">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="maxDate" class="col-lg-2 col-form-label col-form-label-sm">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 offset-lg-2">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-lg-2 col-form-label col-form-label-sm">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="maxDate" class="col-lg-2 col-form-label col-form-label-sm">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 offset-lg-2">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>