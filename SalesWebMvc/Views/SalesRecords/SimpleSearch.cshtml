@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}

<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-dark bg-dark text-light">
    <div class="container-fluid">
        <form class="form-inline" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
               
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-secondary">Filter</button>
        </form>
    </div>
</nav>
<br />

<div class="card bg-dark text-light">
    <div class="card-header">
        <h3 class="card-title">Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="card-body bg-light">
        <table class="table table-striped table-hover text-dark">
            <thead>
                <tr class="bg-secondary">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modeltem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modeltem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modeltem => item.Seller.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modeltem => item.Seller.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modeltem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modeltem => item.Status)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>