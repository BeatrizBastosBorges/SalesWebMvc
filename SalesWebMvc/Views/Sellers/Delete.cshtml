@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<br />

<div>
    <div class="card bg-dark text-light">
        <div class="card-header">
            <h3 class="card-title">Seller</h3>
        </div>

        <div class="card-body bg-light">
            <dl class="row">
                <dt class="text-dark col-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="text-dark col-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="text-dark col-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="text-dark col-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="text-dark col-4">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="text-dark col-8">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="text-dark col-4">
                    @Html.DisplayNameFor(model => model.BaseSalary)
                </dt>
                <dd class="text-dark col-8">
                    @Html.DisplayFor(model => model.BaseSalary)
                </dd>
            </dl>
        </div>
    </div>

    <br />

    <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-dark">Cancel</a>
    </form>
</div>

